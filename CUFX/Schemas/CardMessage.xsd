<?xml version="1.0" encoding="utf-8"?>

<xs:schema targetNamespace="http://cufxstandards.com/v2/CardMessage.xsd"
	version="2.0.$Revision$"
	xmlns="http://cufxstandards.com/v2/CardMessage.xsd"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:messageContext="http://cufxstandards.com/v2/MessageContext.xsd"
  xmlns:card="http://cufxstandards.com/v2/Card.xsd"
	xmlns:cardFilter="http://cufxstandards.com/v2/CardFilter.xsd"

	elementFormDefault="qualified"
	attributeFormDefault="unqualified">

  <xs:import namespace="http://cufxstandards.com/v2/MessageContext.xsd" schemaLocation="MessageContext.xsd" />
  <xs:import namespace="http://cufxstandards.com/v2/Card.xsd" schemaLocation="Card.xsd" />
  <xs:import namespace="http://cufxstandards.com/v2/CardFilter.xsd" schemaLocation="CardFilter.xsd" />

  <xs:element name="cardMessage" type="CardMessage">
    <xs:annotation>
      <xs:documentation>
        All values that can be sent in a cardMessage.  Contains messageContext, cardFilter and cardList.
        This is a wrapper to more easily serialize the complete message.  All values are optional.  See
        example specifications for usage.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="CardMessage">
    <xs:annotation>
      <xs:documentation>
        All values that can be sent in a cardMessage.  Contains messageContext, cardFilter and cardList.
        This is a wrapper to more easily serialize the complete message.  All values are optional.  See
        example specifications for usage.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="messageContext" type="messageContext:MessageContext" minOccurs ="0" maxOccurs ="1">
        <xs:annotation>
          <xs:documentation>
            The MessageContext contains information that is passed as part of each CUFX message call.
            Identifies who is sending the request in and enables some level of security or processing to be executed by the
            service provider.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="cardFilter" type="cardFilter:CardFilter" minOccurs ="0" maxOccurs ="1">
        <xs:annotation>
          <xs:documentation>
            Any filters applied to the a read, update or delete card request.
            Does not apply to a create message.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="cardList" type="card:CardList" minOccurs ="0" maxOccurs ="1">
        <xs:annotation>
          <xs:documentation>
            All the card data.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence >
  </xs:complexType >
</xs:schema>

